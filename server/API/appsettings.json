{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsSettings" : {
    "AllowedOrigin": "https://localhost:5276"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server={ServerName};Initial Catalog=rizzy-db;Persist Security Info=False;User ID={UserName};Password={Password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Connection Timeout=60;"
  },
  "ImageUploadSettings": {
    "MaxFileSizeInBytes": 5242880,
    "MaxResolutionWidth": 1920,
    "MaxResolutionHeight": 1080,
    "AspectRatioWidth": 4,
    "AspectRatioHeight": 5,
    "MaximumImagesCount": 6
  },
  "Roles": {
    "Admin": "Admin",
    "User": "User",
    "VIP": "VIP"
  }
}
